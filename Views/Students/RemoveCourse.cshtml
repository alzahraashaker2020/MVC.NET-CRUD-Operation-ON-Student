@model IEnumerable<TestLab6.Models.Course>
@{
    ViewBag.Title = "RemoveCourse";
    Layout = "~/Shared/_Layout.cshtml";
}

<h2>RemoveCourse</h2>
<form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    New Course
                </th>
                <th>
                    Course Remove
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CrsName</td>
                    <td>@Html.CheckBox("crs." + item.CrsId.ToString())</td>
                </tr>
}

        </tbody>

    </table>
    <input type="submit" value="delete" class="btn btn-danger" />
</form>
