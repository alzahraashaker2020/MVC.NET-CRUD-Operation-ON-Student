@model IEnumerable<TestLab6.Models.Course>
@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Shared/_Layout.cshtml";
}

<h2>AddCourse To @ViewBag.</h2>
@Html.BeginForm(){

<table class="table">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.CrsName)
            </td>
            <td>
                CourseOperation
            </td>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CrsName)
            </td>
            <td>
                @Html.CheckBox("crs." + item.CrsId.ToString())
            </td>

        </tr>
    }

</table>
<input type="submit" value="Add" class="btn btn-outline-warning" />


}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>