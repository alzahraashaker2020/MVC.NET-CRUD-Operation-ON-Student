@model IEnumerable<TestLab6.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Shared/_Layout.cshtml";
}
@Html.ActionLink("Department", "Index", "Department", null, new { @class = "btn btn-danger" })

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.DeptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Uname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th colspan="8">opreation</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                @Html.ActionLink("AddDeg", "AddDegree", new { id = item.Id }, new { @class = "btn btn-success" })
                @*@Html.ActionLink("EditDeg", "EditDegree", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                @Html.ActionLink("AdCrse", "AddCourse", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("RemCrs", "RemoveCourse", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
